<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header"><%= action_message %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= action_message %> administrador
      </div>
      
      <% if @question.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <%= pluralize(@question.errors.count, "erro") %> impediram a gravação:
          <ul>
            <% @question.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>  
        </div>
      <% end %>

      <div class="panel-body">
        <div class="row">
            <div class="col-lg-6">
              <%= form_with(model: [:admins_backoffice, question], local: true) do |form| %>
                <div class="form-group">
                  <%= form.label :description %>
                  <%= form.text_area :description, class: 'form-control', placeholder: 'Descrição da pergunta' %>
                </div>

                <div class="form-group">
                  <%= form.label :subject %>
                  <%= form.collection_select(:subject_id, @subjects, :id, :description, {prompt: "Selecione um assunto"}, class: 'form-control') %> 
                </div>

                <div id='answers'>
                  <%= form.fields_for :answers do |answer| %>
                    <%= render 'answer_fields', f: answer %>
                  <% end %> 

                  <%= link_to_add_association '[Adicionar Resposta]', form, :answers %>
                </div>

                <button type="submit" class="btn btn-default">Submit Button</button>
              <% end %>
            </div>
            <!-- /.col-lg-6 (nested) -->
        </div>
        <!-- /.row (nested) -->
      </div>
    </div>
  </div>
</div>