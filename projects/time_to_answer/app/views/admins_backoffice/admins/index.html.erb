<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Listando administradores</h1>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th> 
        <%= link_to(new_admins_backoffice_admin_path, class: 'btn btn-success btn-circle') do %>
          <i class="fa fa-plus"></i>
        <% end %> 
      </th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <th scope="row"><%= admin.id %></th>
        <td><%= admin.email %></td>
        <td> 
          <%= link_to(edit_admins_backoffice_admin_path(admin), class: 'btn btn-primary btn-circle') do %>
            <i class="fa fa-edit"></i>
          <% end %>

          <%= link_to(
                admins_backoffice_admin_path(admin), 
                method: :delete, 
                class: 'btn btn-danger btn-circle',
                data: { confirm: 'Deseja realmente excluir esse administrador ?'}
              ) do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
