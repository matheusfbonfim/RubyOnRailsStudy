<p style="color: green"><%= notice %></p>

<h1><%=MiningType.model_name.human(count:@mining_types.count)%></h1>

<table class="table table-hover">
  <thead>
      <tr>
        <th colspan="1"><%= @mining_types.human_attribute_name(:description) %></th>
        <th colspan="1"><%= @mining_types.human_attribute_name(:acronym) %></th>
        <th colspan="3"><%= t("tables.column-mining-options") %></th>
      </tr>  
  </thead>

  <tbody>
      <% @mining_types.each do |mining_type| %>
          <tr>
            <!-- Thead coloca um negrito para indicar maior relevancia ou descrição-->
            <td><%=mining_type.description%></td>
            <td><%=mining_type.acronym%></td>
            <td><%= link_to t('links.show'), mining_type %></td>
            <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
            <td> <%= button_to t('links.delete'), mining_type, method: :delete, data: {confirm: t('messages.confirm')} %> </td>
          </tr>
      <% end %> 
  </tbody>
</table>

<br><br>

<div class="container-options">
  <div class="button">
  <%= link_to t("links.new-mining-type"), new_mining_type_path, class: "btn btn-primary btn-lg btn-block" %>
  </div>

  <div class="button">
  <%= link_to t("links.back-to-home"), welcome_index_path, class: "btn btn-primary btn-lg btn-block" %>
  </div>
</div>