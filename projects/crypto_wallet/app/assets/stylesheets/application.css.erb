 @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@100&display=swap');

 body{
    background-color: <%= Rails.env.development? ? 'yellow' : 'red' %>;
    font-family: 'JetBrains Mono', monospace;
 }

table{
  border-collapse: separate;
  border-spacing: 50px 0;
  text-align: center;
  font-weight: bold;
}

th{
  color: red;
  font-size: 1.5rem;
}

td{
  padding: 10px 0;
}

.field{
  padding: 10px;
}

.container-main .container-main-mining-types{
  display: flex;
  flex-direction: column;
}


.container-options{
  display: flex;
  flex-direction: row;
  gap: 7vw;
  justify-content: center;
}

.button{
  border-radius: 1px;
  font-size: 1.5rem;
}