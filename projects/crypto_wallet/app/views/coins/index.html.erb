<%# Notice -> Usado por exemplo quando é apagado alguma moeda, e avisa/noticiar o que aconteceu %>
<p style="color: green"><%= notice %></p>

<p> <strong> Data: <%= l(Date.today) %> </strong> </p>

<h1 style = "text-align:center;"><%= nome_aplicacao %></h1>

<div class="container-main">

    <h1><%=t("tables.title-coin")%></h1>

    <h2> <%= cookies[:curso] %> </h2>
    <h2> <%= session[:curso] %> </h2>

    <%# Table %>
    <table class="table-coins">
      <thead>
        <tr>
          <th colspan="1"><%= @coins.human_attribute_name(:description) %></th>
          <th colspan="1"><%= @coins.human_attribute_name(:acronym) %></th>
          <th colspan="1"><%= @coins.human_attribute_name(:url_image) %></th>
          <th colspan="1"><%= @coins.human_attribute_name(:mining_type) %></th>
          <th colspan="3"><%= t("tables.column-mining-options") %></th>
        </tr>  
      </thead>

      <tbody>
        <% @coins.each do |coin| %>
            <tr>
              <!-- Thead coloca um negrito para indicar maior relevancia ou descrição-->
              <td><%=coin.description%></td>
              <td><%=coin.acronym%></td>
              <td><%=image_tag coin.url_image, size: "70x50" %></td>
              <td><%=coin.mining_type.description%></td>
              <td><%= link_to t('links.show'), coin %></td>
              <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
              <td> <%= button_to t('links.delete'), coin, method: :delete, data: {confirm: "Tem certeza que quer excluir?"} %> </td>
            </tr>
        <% end %> 
      </tbody>

    </table>

    <br><br>

    <div class="container-options">
      <div class="button">
      <%= link_to t("links.new-coin"), new_coin_path %>
      </div>

      <div class="button">
      <%= link_to t("links.back-to-home"), welcome_index_path %>
      </div>
    </div>

</div>