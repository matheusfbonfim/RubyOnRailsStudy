<%# Notice -> Usado por exemplo quando é apagado alguma moeda, e avisa/noticiar o que aconteceu %>
<p style="color: green"><%= notice %></p>

<p> <strong> Data: <%= data_br(Date.today) %> </strong> </p>

<h1 style = "text-align:center;"><%= nome_aplicacao %></h1>

<h1>Coins</h1>


<%# Table %>
<table class="table-coins">
  <thead>
    <tr>
      <th colspan="1">Descrição</th>
      <th colspan="1">Sigla</th>
      <th colspan="1">Imagem</th>
      <th colspan="3">Opções</th>
    </tr>  
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
        <tr>
          <!-- Thead coloca um negrito para indicar maior relevancia ou descrição-->
          <td><%=coin.description%></td>
          <td><%=coin.acronym%></td>
          <td><%=image_tag coin.url_image, size: "70x50" %></td>
          <td><%= link_to 'Mostrar', coin %></td>
          <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
          <td> <%= button_to "Destroy this coin", coin, method: :delete, data: {confirm: "Tem certeza que quer excluir?"} %> </td>
        </tr>
    <% end %> 
  </tbody>

</table>

<br><br>

