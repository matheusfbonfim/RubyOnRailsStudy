<%= form_with(model: coin, local: true) do |form| %>
  <%# Verifica possiveis erros %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Verifica os labels do formulário %>
  <div>
    <%= form.label :description, "Descrição: ", style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :acronym, "Acrônimo: " ,style: "display: block" %>
    <%= form.text_field :acronym %>
  </div>

  <div>
    <%= form.label :url_image, "Link da imagem: ", style: "display: block" %>
    <%= form.text_field :url_image %>
  </div>

  <div>
    <%= form.select("mining_type_id", MiningType.all.collect {|m| [ m.description, m.id ] }, { include_blank: 'Selecione...' }) %>
  </div>
  

  <div>
    <%= form.submit %>
  </div>
<% end %>
